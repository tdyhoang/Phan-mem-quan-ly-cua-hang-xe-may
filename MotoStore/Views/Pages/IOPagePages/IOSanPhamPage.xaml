               Content="Số Lượng: " 
               Margin="49,140,595,266"
               FontSize="15"
               Foreground="Black"/>
        <TextBox x:Name="txtSoLuongSP" Margin="249,137,501,0" VerticalAlignment="Top"/>
        <Label x:Name="lbXuatXu"
               Content="Xuất Xứ: " 
               Margin="49,199,595,207"
               FontSize="15"
               Foreground="Black"/>
        <TextBox x:Name="txtXuatXuSP" Margin="249,201,501,0" VerticalAlignment="Top"/>
        <Button x:Name="btnAddSP" FontWeight="UltraBlack" Content="THÊM MỚI" Margin="302,388,0,0" VerticalAlignment="Top" Height="48" Width="117"/>
