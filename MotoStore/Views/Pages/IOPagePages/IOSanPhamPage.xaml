        <Label x:Name="lbGia"
               Content="Giá: " 
               Margin="49,83,595,323"
               FontSize="15"
               Foreground="Black"/>
        <TextBox x:Name="txtGiaSP" Margin="249,85,501,0" VerticalAlignment="Top"/>
