<ui:UiPage x:Class="MotoStore.Views.Pages.IOPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MotoStore.Views.Pages"
      xmlns:models="clr-namespace:MotoStore.Models"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      d:DataContext="{d:DesignInstance local:IOPage,
                                     IsDesignTimeCreatable=False}"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Scrollable="True"
      Title="IOPage">

    <Grid>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Top">
            <Button x:Name="btnAddSPPage" Content="Sản Phẩm" MinWidth="100" Click="btnAddSPPage_Click" />
            <Button x:Name="btnAddNVPage" Content="Nhân Viên" MinWidth="100" Click="btnAddNVPage_Click"/>
            <Button x:Name="btnAddNSXPage" Content="Nhà Sản Xuất" MinWidth="100" Click="btnAddNSXPage_Click"/>
            <Button x:Name="btnAddKhachHang" Content="Khách Hàng" MinWidth="100" Click="btnAddKhachHang_Click"/>
            <Button x:Name="btnAddHoaDon" Content="Hóa Đơn" MinWidth="100" Click="btnAddHoaDon_Click"/>
        </StackPanel>
        <Frame x:Name="IOMain" Margin="0,35,0,0" VerticalAlignment="Top" />
    </Grid>
</ui:UiPage>
